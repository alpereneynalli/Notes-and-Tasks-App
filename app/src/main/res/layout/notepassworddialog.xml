<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_notePassword"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/titleText"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Enter Note Password"
                android:inputType="textPassword"
                android:textColor="@color/titleText"
                android:textColorHint="@color/textGrey"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_notePasswordAgain"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/titleText"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Enter Note Password Again"
                android:inputType="textPassword"
                android:textColor="@color/titleText"
                android:textColorHint="@color/textGrey"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="60dp"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveNotePasswordBackBtn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple"
                    android:text="BACK"
                    android:textAlignment="center"
                    android:textColor="@color/titleText"
                    android:layout_marginEnd="60dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveNotePasswordBtn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ripple"
                    android:text="SAVE"
                    android:textAlignment="center"
                    android:textColor="@color/titleText"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>